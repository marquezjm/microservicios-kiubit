pipeline{
    agent{
        label 'docker-agent-local'
    }
    triggers{
        pollSCM('*/5 * * * *')
    }
    environment {
        IMAGE_NAME = "auth_service"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }
    stages{
        stage('Test') {
            steps {
                dir('auth_service'){
                    sh './mvnw test'
                }
            }
        }
        stage('Build'){
            steps{
                dir('auth_service'){
                    sh './mvnw clean package -DskipTests'
                }
            }
        }
        stage('Deliver'){
            steps {
                script {
                    dir('auth_service'){
                        docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                    }
                }
            }
        }
        stage('Deploy Auth Service') {
            steps {
                sh '''
                docker rm -f auth_service || true
                docker run -d \
                    --name auth_service \
                    -p 8081:8080 \
                    ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
    }
}